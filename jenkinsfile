pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        DOCKER_IMAGE = "${DOCKERHUB_CREDENTIALS_USR}/jenkins-flask"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/naveenkumarhu2-eng/jenkins-flask-pipeline.git'
            }
        }

        stage('Install dependencies & Test') {
            steps {
                sh '''
                python3 -m pip install --upgrade pip
                pip3 install -r app/requirements.txt
                pytest -q app/test_app.py
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${BUILD_NUMBER}", ".")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        docker.image("${DOCKER_IMAGE}:${BUILD_NUMBER}").push()
                    }
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                sh '''
                docker stop flask-container || true
                docker rm flask-container || true
                docker run -d -p 5000:5000 --name flask-container ${DOCKER_IMAGE}:${BUILD_NUMBER}
                '''
            }
        }
    }

    post {
        success { echo "✅ Build & Deploy Successful!" }
        failure { echo "❌ Build Failed!" }
    }
}

