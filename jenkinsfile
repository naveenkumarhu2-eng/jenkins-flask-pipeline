pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "naveen87422/jenkins-flask"
        DOCKER_CREDENTIALS = "dockerhub-creds"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/naveenkumarhu2-eng/jenkins-flask-pipeline.git'
            }
        }

        stage('Install Dependencies & Test') {
            steps {
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate && pip install -r app/requirements.txt'
                sh '. venv/bin/activate && pytest app/test_app.py'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${env.BUILD_NUMBER}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS}") {
                        docker.image("${DOCKER_IMAGE}:${env.BUILD_NUMBER}").push()
                    }
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                sh "docker run -d -p 5000:5000 ${DOCKER_IMAGE}:${env.BUILD_NUMBER}"
            }
        }
    }

    post {
        success {
            echo '✅ Build, Test, Docker Push, and Deploy successful!'
        }
        failure {
            echo '❌ Build failed. Check logs.'
        }
    }
}


